{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", // Changed from CommonJS
    "moduleResolution": "NodeNext", // Changed from node
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
